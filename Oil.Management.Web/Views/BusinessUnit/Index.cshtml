@using Oil.Management.Shared.ViewModels.Reference
@model BusinessUnitModel
@{
    ViewData["Title"] = "Business Unit";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<section class="section">
     <div class="section-header">
        <h1> Master Factory</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Reference</a></div>
            <div class="breadcrumb-item">Manajemen Business Unit</div>
        </div>
    </div>

    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4 class="col-md-6">Business Unit</h4>
            </div>
            <div class="card-body"> 
                @if (!string.IsNullOrWhiteSpace(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <strong>Error !</strong> @errorMessage
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                }

                 <form class="mb-2">
                    <button class="btn btn-primary" asp-action="create" asp-controller="BusinessUnit"> <i class="fa fa-plus"></i> Tambah Business Unit </button>
                </form>

                <div class="table-responsive">
                    <table id="TableBusinessUnit" class="table table-striped table-bordered table-hover nowrap" style="width:100%;"> 
                        <thead>
                            <tr>
                                <td>Id</td>
                                <td>Business Name</td>
                                <td>Status</td>
                                <td>Aksi</td>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Business Name</th>
                                <th>Aksi</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

</section>
