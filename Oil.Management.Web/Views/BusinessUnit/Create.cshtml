@{
    ViewData["title"] = "Create Business Unit";
}


<section class="section">
     <div class="section-header"> 
         <h1> Reference Business Unit</h1>
          <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Reference</a></div>
            <div class="breadcrumb-item">Manajemen Business Unit</div>
        </div>
     </div>
     <div class="section-body">
         <div class="card">
             <form class="form-horizontal container" id="FormCreateBusinessUnit" enctype="multipart/form-data"> 
                <div class="card-header">
                    <h4 class="col-md-6">Create Business Unit</h4>
                </div>
                <div class="card-body"> 
                
                        <div class="col-sm-9">
                                <input type="hidden" class="form-control"  name="IdBusinessUnit" id="IdBusinessUnit" readonly />
                            </div>
                        <div class="form-group form-row">
                            <label class="col-form-label col-sm-3" style="text-align:left;">Business Name:</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control col-sm-9" name="BusinessUnitName" id="BusinessUnitName" placeholder="Input Name Business Name..."/>
                            
                            </div>
                        </div>
              
                </div>
                <div class="card-footer text-right">
                     <button type="button" class="btn btn-secondary mr-1" onclick="@("window.location.href='" + @Url.Action("index", "BusinessUnit") + "'");"><i class="fa fa-times-circle-o"></i> Kembali </button>
                      <button type="button" class="btn btn-primary" id="BtnSaveFactory" onclick="SaveBusinessUnit('Add')"><i class="fa fa-save"></i> Simpan Data</button>
                </div>
              </form>

         </div>
     </div>
</section>