<div class="modal fade" id="ModalFormUpdateProfile" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" style="max-width:900px;" role="document">
        <div class="modal-content">
            <div class="modal-header text-white" style="background:#1e7e3f;border-color:#1e7e3f;">
                <h5 class="modal-title" id="TitleFormUpdateProfile"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="#" enctype="multipart/form-data" id="FormUpdateProfile">
                    <input type="hidden" class="form-control" name="IdPegawai" />
                    <input type="hidden" class="form-control" name="IdUnit" />
                    <div class="form-row">
                         <div class="col-md-12">
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-3" style="text-align:left;">Nama Lengkap:</label>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" name="FirstName" placeholder="Nama Depan" readonly />
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" name="MiddleName" placeholder="Nama Tengah" readonly />
                                </div>
                                <div class="col-sm-3">
                                    <input type="text" class="form-control" name="LastName" placeholder="Nama Belakang" readonly />
                                </div>
                                <small class="text-danger"><b>*Hubungi admin jika ada perubahan nama</b></small>
                            </div>
                        </div>
                        <div class="col-md-6">
                           
                             <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Alamat Lengkap:</label>
                                <div class="col-sm-8">
                                    <textarea class="form-control" name="Address" placeholder="Masukan Alamat Lengkap" style="height:100px" data-input-profile="wajib"></textarea>
                                </div>
                            </div>
                           
                           
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Tempat Lahir:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="TempatLahir" placeholder="Masukan Tempat Lahir" data-input-profile="wajib" />
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Tanggal Lahir:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="TanggalLahir" data-toggle="datepicker" placeholder="Masukan Tanggal Lahir" data-input-profile="wajib" />
                                    <small class="text-danger"><b>*Format (dd-mm-yyyy)</b></small>
                                </div>
                            </div>

                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Jenis Kelamin:</label>
                                <div class="col-sm-8">
                                    <select name="KdJenisKelamin" class="form-control select2" style="width:100%" data-input-profile="wajib" placeholder="Masukan Jenis Kelamin">
                                    </select>
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Agama:</label>
                                <div class="col-sm-8">
                                    <select name="IdAgama" id="IdAgama" class="form-control select2" style="width:100%" data-input-profile="wajib" placeholder="Masukan Agama">
                                    </select>
                                </div>
                            </div>
                          
                           
                        </div>
                        <div class="col-md-6">
                             <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">No Handphone:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="NoDarurat" placeholder="Masukan No Handphone" data-input-profile="wajib" />
                                </div>
                            </div>
                             <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">No Darurat:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="NoDarurat" placeholder="Masukan No Darurat" data-input-profile="wajib" />
                                </div>
                            </div>
                             <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">Email:</label>
                                <div class="col-sm-8">
                                    <input type="email" class="form-control" name="Email" placeholder="Masukan Email" data-input-profile="wajib" />
                                </div>
                            </div>
                           
                           
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">NIK:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" name="Nik" placeholder="Masukan Nik" data-input-profile="wajib" />
                                </div>
                            </div>
                            <div class="form-group form-row">
                                <label class="col-form-label col-sm-4" style="text-align:left;">NPWP:</label>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control" name="Npwp" placeholder="Masukan NPWP" data-input-profile="wajib" />
                                    <small class="text-danger"><b>*Isikan <b>0</b> apabila tidak memiliki</b></small>
                                </div>
                            </div>
                           
                        </div>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times-circle-o"></i> Tutup</button>
                <button type="button" class="btn btn-primary" id="BtnSaveUpdateProfile"><i class="fa fa-save"></i> Simpan Data</button>
            </div>
        </div>
    </div>
</div>