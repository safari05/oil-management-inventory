@{
    ViewData["title"] = "Create Customer";
}

<section class="section">
    <div class="section-header"> 
         <h1> Master Subsidiary Company</h1>
          <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Master</a></div>
            <div class="breadcrumb-item">Manajemen Customer </div>
        </div>
     </div>
     <div class="section-body">
         <div class="card">
             <form class="form-horizontal container" id="FormCreateCustomer" enctype="multipart/form-data"> 
                 <div class="card-header">
                      <h4 class="col-md-6">Create Customer</h4>
                 </div>
                 <div class="card-body">
                      <div class="col-sm-9">
                            <input type="hidden" class="form-control"  name="IdCustomer" id="IdCustomer" readonly />
                      </div>
                      <div class="form-group form-row">
                          <label class="col-form-label col-sm-3" style="text-align:left"> Subsidiary Company </label>
                          <div class="col-sm-9">
                              <select  name="IdSubsidiaryCompany" style="width:600px">
                                 
                                </select>
                          </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Cutomer Name:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" name="CutomerName" id="CutomerName" placeholder="Input Customer Name..."/>
                        </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Nib:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" name="Nib" id="Nib" placeholder="Input Nib..."/>
                        </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Npwp:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" name="Npwp" id="Npwp" placeholder="Input Npwp..."/>
                        </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Phone:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" name="Phone" id="Phone" placeholder="Input Phone..."/>
                        </div>
                      </div>
                      
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Email:</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control col-sm-9" name="Email" id="Email" placeholder="Input Email..."/>
                        </div>
                      </div>
                      
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Pic Name:</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control col-sm-9" name="PicName" id="PicName" placeholder="Input Pic Name..."/>
                        </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Pic Phone:</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control col-sm-9" name="PicPhone" id="PicPhone" placeholder="Input Pic Phone..."/>
                        </div>
                      </div>
                      <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Pic Email:</label>
                        <div class="col-sm-9">
                            <input type="email" class="form-control col-sm-9" name="PicEmail" id="PicEmail" placeholder="Input Pic Email..."/>
                        </div>
                      </div>
                       <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Address:</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" name="Address" id="Address" style="height:80px"></textarea>
                        </div>
                      </div>
                 </div>
                 <div class="card-footer text-right">
                     <button type="button" class="btn btn-secondary mr-1" onclick="@("window.location.href='" + @Url.Action("index", "Customer") + "'");"><i class="fa fa-times-circle-o"></i> Kembali </button>
                      <button type="button" class="btn btn-primary" id="BtnSaveContract" onclick="SaveCustomer('Add')"><i class="fa fa-save"></i> Simpan Data</button>
                </div>
             </form>
         </div>
     </div>
</section>
