@{
    ViewData["Title"] = "Referensi Type User";
}

<section class="section">
    <div class="section-header">
        <h1> Referensi Type User</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Referensi</a></div>
            <div class="breadcrumb-item">Manajemen Type Users</div>
        </div>
    </div>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                    <h4 class="col-md-6">Data Users</h4>
                <h4 class="col-md-6 text-right"><button type="button" class="btn btn-primary" onclick="AddTypeUser();"><i class="fa fa-plus"></i> Tambah Type User</button></h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="TableReferesiTypeUser" class="table table-striped table-bordered table-hover nowrap" style="width:100%;">
                        <thead>
                            <tr>
                                <td>Id</td>
                                <td>Name</td>
                                <td>Aksi</td>
                            </tr>
                        </thead>
                         <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Aksi</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- modal here -->
<div class="modal fade" id="ModalFormTypeUser" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TitleFormTypeUser">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form-horizontal" action="#" enctype="multipart/form-data" id="FormTypeUser">
                    <input type="hidden" class="form-control" name="IdTypeUser" />
                    
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Name Type User:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" name="TypeName" placeholder="Ketikkan Type Name..." />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fa fa-times-circle-o"></i> Tutup</button>
                <button type="button" class="btn btn-primary" id="BtnSaveTypeUser"><i class="fa fa-save"></i> Simpan Data</button>
            </div>
        </div>
    </div>
</div>