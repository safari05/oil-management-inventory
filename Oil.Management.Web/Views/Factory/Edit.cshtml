@using Oil.Management.Shared.ViewModels.Master
@model FactoryModel
@{
    ViewData["title"] = "Edit Factory";
}

<section class="section">
    <div class="section-header">
        <h1> Master Factory</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Master</a></div>
            <div class="breadcrumb-item">Manajemen Factory</div>
        </div>
    </div>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                <h4 class="col-md-6">Edit Factory</h4>
            </div>
            <div class="card-body">
                <form class="form-horizontal container" id="FormCreateFactory" enctype="multipart/form-data">
                    
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Factory Id:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" asp-for="IdFactory" name="IdFactory" id="IdFactory" readonly />
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Factory Name:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" asp-for="FactoryName" name="FactoryName" id="factory_name" placeholder="Input Name Factory..."/>
                            
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Nib:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" asp-for="Nib"  name="Nib" id="nib"  placeholder="Input Nib..."/>
                            
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Pic:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" asp-for="Pic" name="Pic" id="pic"  placeholder="Input Pic..."/>
                            
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Phone:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" asp-for="Phone"  name="Phone" id="phone"  placeholder="Input Phone..."/>
                            
                        </div>
                    </div>
                    <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Email:</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control col-sm-9" asp-for="Email"  name="Email" id="email"  placeholder="Input Email..."/>
                            
                        </div>
                    </div>
                     <div class="form-group form-row">
                        <label class="col-form-label col-sm-3" style="text-align:left;">Address:</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" name="Address" asp-for="Address" placeholder="Input Address" style="height:80px;"> </textarea>
                        </div>
                    </div>
                    <div class="form-group form-row text-right">
                        <button type="button" class="btn btn-secondary mr-1" onclick="@("window.location.href='" + @Url.Action("index", "factory") + "'");"><i class="fa fa-times-circle-o"></i> Kembali </button>
                        <button type="button" class="btn btn-primary" id="BtnSaveFactory" onclick="SaveFactory('Edit')"><i class="fa fa-save"></i> Simpan Data</button>
                    </div>
                    
                </form>
            </div>
        </div>

    </div>
</section>