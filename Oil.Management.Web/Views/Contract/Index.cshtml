@{
    ViewData["Title"] = "Transaksi Contract";
    var errorMessage = TempData["errorMessage"]?.ToString();
}

<section class="section">
    <div class="section-header">
        <h1> Transaction Contract</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a asp-controller="Home" asp-action="Index">Transaction</a></div>
            <div class="breadcrumb-item">Contract</div>
        </div>
    </div>
    <div class="section-body">
        <div class="card">
            <div class="card-header">
                 <h4 class="col-md-6">Data Contracts</h4>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(errorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                      <strong>Error !</strong> @errorMessage
                      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                }
                <form class="mb-2">
                    <button class="btn btn-primary" asp-action="create" asp-controller="contract"> <i class="fa fa-plus"></i> Tambah  </button>
                </form>
                <div class="table-responsive">
                    <table id="TbContracts" class="table table-striped table-bordered table-hover nowrap" style="width:100%">
                        <thead>
                            <tr>
                                 <td>Id</td>
                                 <td>Name Contract</td>
                                 <td>Start Contract</td>
                                 <td>End Contract</td>
                                 <td>File Guarante</td>
                                 <td>Percent Domestic</td>
                                 <td>Percent Export</td>
                                 <td>Status</td>
                                 <td>Created By</td>
                                 <td>Factory Name</td>
                                 <td>Action</td>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                 <th>Id</th>
                                 <th>Name Contract</th>
                                 <th>Start Contract</th>
                                 <th>End Contract</th>
                                 <th>File Guarante</th>
                                 <th>Percent Domestic</th>
                                 <th>Percent Export</th>
                                 <th>Status</th>
                                 <th>Created By</th>
                                 <th>Factory Name</th>
                                 <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>